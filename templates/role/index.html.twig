            </tr>
            <tr>
                <td class="tg-0pky"><input type="checkbox" id="ROLE_OPT_SAISIR_ACHATS" name="ROLE_OPT_SAISIR_ACHATS"></td>
                <td class="tg-0pky">Saisir un achat</td>
            </tr>
            <tr>
                <td class="tg-0pky"><input type="checkbox" id="ROLE_OPT_SERVICES" name="ROLE_OPT_SERVICES"></td>
                <td class="tg-0pky">Gérer les services</td>
            </tr>
            <tr>
                <td class="tg-0pky"><input type="checkbox" id="ROLE_OPT_STAT_MPPA_MABC" name="ROLE_OPT_STAT_MPPA_MABC"></td>
                <td class="tg-0pky">Statistiques MPPA/MABC</td>
            </tr>
            <tr>
                <td class="tg-0pky"><input type="checkbox" id="ROLE_OPT_STAT_PME" name="ROLE_OPT_STAT_PME"></td>
                <td class="tg-0pky">Statistique PME</td>
            </tr>
            <tr>
                <td class="tg-0pky"><input type="checkbox" id="ROLE_OPT_UO" name="ROLE_OPT_UO"></td>
                <td class="tg-0pky">Gérer les unités organiques</td>
            </tr>
            <tr>
                <td class="tg-0pky"><input type="checkbox" id="ROLE_OPT_UTILISATEURS" name="ROLE_OPT_UTILISATEURS"></td>
                <td class="tg-0pky">Gérer les utilisateurs</td>
            </tr>
            <tr>
                <td class="tg-0pky"><input type="checkbox" id="ROLE_OPT_VALIDER_ACHATS" name="ROLE_OPT_VALIDER_ACHATS"></td>
                <td class="tg-0pky">Valider ou notifier un achat</td>
            </tr>
            <tr>
                <td class="tg-0pky"><input type="checkbox" id="ROLE_OPT_VISU_ACHATS" name="ROLE_OPT_VISU_ACHATS"></td>
                <td class="tg-0pky">Visualiser/Imprimer un achat</td>
            </tr>
        </tbody>
    </table>
    </div>
    <button id="submitChangesBtn" data-action="click->role#saveRoles">Sauvegarder les changements</button>
    <div id="role"></div>
        </div>
    {% endblock %}