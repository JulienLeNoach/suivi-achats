{% extends 'base.html.twig' %}

{% block title %}Gérer les fournisseurs{% endblock %}

{% block body %}
<div class="achat-container">

    <div class='align-items-center justify-content-center d-flex mt-3 bandeau-form-search'>
        <h5 class="mt-4 ms-3 blueF">Gérer les fournisseurs</h5>
        <div class="bande ms-3">
        </div>
    </div>
                    <div class='addAchat mt-5 p-3'>
        <span class="fr-icon-arrow-right-line ms-5" aria-hidden="true"></span>

        <div class=" ms-5 blueF align-items-center justify-content-center d-flex">Saisir un nouveau fournisseur</div>
        <button class="fr-btn btn-achat ms-5"> 
            <a href="{{ path('app_fournisseurs_new') }}" class="text-center">Ajouter un fournisseur</a>
            
        </button>
        {% for flash_message in app.session.flashbag.get('valid') %}
        <div class="alert alert-success">
            {{ flash_message }}
        </div>
        {% endfor %}
    </div>
    <div class="d-flex">
    <div class="w-75">
   <form method="get" action="{{ path('app_fournisseurs_index') }}"class="d-flex flex-column">
   <h6 class="d-flex w-50 blueF mt-3">

        <input type="text" class="w-75 searchcrud" name="search" value="{{ searchTerm }}" placeholder="Rechercher par N°Siret ou libellé">
        <button type="submit" class="fr-btn btn-achat">Rechercher</button>
        </h6>
    </form>
    </div>
    <div class="w-25">
     <form method="get" action="{{ path('app_fournisseurs_index') }}" >
        <label for="perPage" class="align-items-center vertical-align-middle justify-content-center d-inline-flex" >Nombre par page:</label>
        <select name="perPage" id="perPage" onchange="this.form.submit()">
            <option value="5" {% if perPage == 5 %}selected{% endif %}>5</option>
            <option value="10" {% if perPage == 10 %}selected{% endif %}>10</option>
            <option value="20" {% if perPage == 20 %}selected{% endif %}>20</option>
            <!-- Ajoutez d'autres options au besoin -->
        </select>
    </form>
    </div>
</div>
    <table >
        <thead>
            <tr>
                <th>Numéro SIRET <a href="{{ path('app_fournisseurs_index', {'sortField': 'num_siret', 'sortDirection': sortField == 'num_siret' and sortDirection == 'asc' ? 'desc' : 'asc', 'search': searchTerm, 'perPage': perPage}) }}"><span class="fr-icon-filter-line" aria-hidden="true"></span>
</a></th>
                <th>Nom du fournisseur <a href="{{ path('app_fournisseurs_index', {'sortField': 'nom_fournisseur', 'sortDirection': sortField == 'nom_fournisseur' and sortDirection == 'asc' ? 'desc' : 'asc', 'search': searchTerm, 'perPage': perPage}) }}"><span class="fr-icon-filter-line" aria-hidden="true"></a></th>
                <th>Code Client <a href="{{ path('app_fournisseurs_index', {'sortField': 'code_client', 'sortDirection': sortField == 'code_client' and sortDirection == 'asc' ? 'desc' : 'asc', 'search': searchTerm, 'perPage': perPage}) }}"><span class="fr-icon-filter-line" aria-hidden="true"></a></th>
                <th>Ville <a href="{{ path('app_fournisseurs_index', {'sortField': 'ville', 'sortDirection': sortField == 'ville' and sortDirection == 'asc' ? 'desc' : 'asc', 'search': searchTerm, 'perPage': perPage}) }}"><span class="fr-icon-filter-line" aria-hidden="true"></a></th>
                <th>Code Postal <a href="{{ path('app_fournisseurs_index', {'sortField': 'code_postal', 'sortDirection': sortField == 'code_postal' and sortDirection == 'asc' ? 'desc' : 'asc', 'search': searchTerm, 'perPage': perPage}) }}"><span class="fr-icon-filter-line" aria-hidden="true"></a></th>
                <th>Téléphone <a href="{{ path('app_fournisseurs_index', {'sortField': 'tel', 'sortDirection': sortField == 'tel' and sortDirection == 'asc' ? 'desc' : 'asc', 'search': searchTerm, 'perPage': perPage}) }}"><span class="fr-icon-filter-line" aria-hidden="true"></a></th>
                <th>FAX <a href="{{ path('app_fournisseurs_index', {'sortField': 'fax', 'sortDirection': sortField == 'fax' and sortDirection == 'asc' ? 'desc' : 'asc', 'search': searchTerm, 'perPage': perPage}) }}"><span class="fr-icon-filter-line" aria-hidden="true"></a></th>
                <th>Num Chorus fournisseur <a href="{{ path('app_fournisseurs_index', {'sortField': 'num_chorus_fournisseur', 'sortDirection': sortField == 'num_chorus_fournisseur' and sortDirection == 'asc' ? 'desc' : 'asc', 'search': searchTerm, 'perPage': perPage}) }}"><span class="fr-icon-filter-line" aria-hidden="true"></a></th>
                <th>Mail <a href="{{ path('app_fournisseurs_index', {'sortField': 'mail', 'sortDirection': sortField == 'mail' and sortDirection == 'asc' ? 'desc' : 'asc', 'search': searchTerm, 'perPage': perPage}) }}"><span class="fr-icon-filter-line" aria-hidden="true"></a></th>
                <th>Etat <a href="{{ path('app_fournisseurs_index', {'sortField': 'etat_fournisseur', 'sortDirection': sortField == 'etat_fournisseur' and sortDirection == 'asc' ? 'desc' : 'asc', 'search': searchTerm, 'perPage': perPage}) }}"><span class="fr-icon-filter-line" aria-hidden="true"></a></th>

                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
{% for fournisseur in pagination %}
            <tr>
                <td>{{ fournisseur.numSiret }}</td>
                <td>{{ fournisseur.NomFournisseur }}</td>
                <td>{{ fournisseur.codeClient }}</td>
                <td>{{ fournisseur.ville }}</td>
                <td>{{ fournisseur.codePostal }}</td>
                <td>{{ fournisseur.tel }}</td>
                <td>{{ fournisseur.fax }}</td>
                <td>{{ fournisseur.numChorusFournisseur }}</td>
                <td>{{ fournisseur.Mail }}</td>
<td>
    {% if fournisseur.EtatFournisseur == 1 %}
        Actif
    {% elseif fournisseur.EtatFournisseur == 0 %}
        Inactif
    {% else %}
        <!-- Gérer les autres cas si nécessaire -->
        {{ fournisseur.EtatFournisseur }}
    {% endif %}
</td>                
                <td>
                    <a href="{{ path('app_fournisseurs_show', {'id': fournisseur.id}) }}">Voir <span class="fr-icon-eye-line" aria-hidden="true"></span>
</a>
                    <a href="{{ path('app_fournisseurs_edit', {'id': fournisseur.id}) }}">Modifier <span class="fr-icon-draft-line" aria-hidden="true"></span>
</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucun fournisseur trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>



</div>
    <div class="pagination">
        {{ knp_pagination_render(pagination,'@KnpPaginator/Pagination/twitter_bootstrap_v4_pagination.html.twig') }}
    </div>
{% endblock %}
