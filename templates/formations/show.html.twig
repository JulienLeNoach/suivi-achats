{% extends 'base.html.twig' %}

{% block title %}Formation{% endblock %}

{% block body %}
<div class="achat-container">
    <div class='align-items-center justify-content-center d-flex mt-3 bandeau-form-search'>
        <h5 class="mt-4 ms-3 blueF">Formation N°{{formation.codeFormation}}</h5>
        <div class="bande ms-3">
        </div>
    </div>
    <div class="action-container p-3">
    <table class="">
        <tbody>
            <tr>
                <th>Code Formation</th>
                <td>{{ formation.codeFormation }}</td>
            </tr>
            <tr>
                <th>Libelle Formation</th>
                <td>{{ formation.libelleFormation }}</td>
            </tr>
            <tr>
                <th>Etat de la formation</th>
<td>
    {% if formation.etatFormation == 1 %}
        Actif
    {% elseif formation.etatFormation == 0 %}
        Inactif
    {% else %}
        <!-- Gérer les autres cas si nécessaire -->
        {{ formation.etatFormation }}
    {% endif %}
</td> 
            </tr>
        </tbody>
    </table>
    <div class="align-items-center justify-content-center d-flex mt-3">

    <a class="fr-btn me-3" href="{{ path('app_formations_edit', {'id': formation.id}) }}">Modifier</a>

    {{ include('formations/_delete_form.html.twig') }}
    </div>
    <div class="align-items-center justify-content-center d-flex mt-3">
        <a class="fr-btn" href="{{ path('app_formations_index') }}">Retour à la liste</a>
</div>
    </div>
    </div>

</div>
{% endblock %}
