{% extends 'base.html.twig' %}

{% block title %}Visualiser un achat{% endblock %}

{% block body %}
<div class="achat-container">

        <div class='align-items-center d-flex mt-3 bandeau-form-search'>
            <span class="fr-icon-search-line" aria-hidden="true"></span>

            <h5 class="mt-4 ms-3 blueF">Visualiser un achat</h5>
            <div class="bande ms-3">
            </div>
        </div>
        <div class="form-container action-container">
        <form class="search-form-all d-flex justify-content-around flex-wrap p-5">
            <div class="input-grp" style="flex-basis:25%">
                <div class="d-flex flex-column">
                            <label for="ser" class="fr-label">Service</label>
            <input type="text" id="ser" class="fr-input" value="{{result_achat.codeService}}" disabled>
        </div>
        <div class="d-flex flex-column">
            <label for="sir" class="fr-label">N° SIRET</label>
            <input type="text" id="sir" class="fr-input" value="{{result_achat.numSiret}}" disabled>
        </div>
        <div class="d-flex flex-column">
            <label for="cpv" class="fr-label">CPV</label>
            <input type="text" id="cpv" class="fr-input" value="{{result_achat.codeCPV}}" disabled>
        </div>
        <div class="d-flex flex-column">
            <label for="uo" class="fr-label">Unité organique</label>
            <input type="text" id="uo" class="fr-input" value="{{result_achat.codeUO}}" disabled>
        </div>
        <div class="d-flex flex-column">
            <label for="for" class="fr-label">Formation</label>
            <input type="text" id="for" class="fr-input" value="{{result_achat.codeFormation}}" disabled>
        </div>
    </div>
    <div class="input-grp" style="flex-basis:25%">
        <div class="d-flex flex-column">
            <label for="mtn" class="fr-label">Montant achat HT</label>
            <input type="text" id="mtn" class="fr-input" value="{{result_achat.montantAchat}}" disabled>
        </div>
        <div class="d-flex flex-column">
            <label for="sil" class="fr-label">Date sillage</label>
            <input type="text" id="sil" class="fr-input" value="{{result_achat.dateSillage | join ('') | date('Y/m/d')}}" disabled>
        </div>
        <div class="d-flex flex-column">
            <label for="chor" class="fr-label">Date commande CHORUS</label>
            <input type="text" id="chor" class="fr-input" value="{{result_achat.dateCommandeChorus | join ('') | date('Y/m/d')}}" disabled>
        </div>
        <div class="d-flex flex-column">
            <label for="val" class="fr-label">Date de validation de l'achat</label>
            <input type="text" id="val" class="fr-input" value="{{result_achat.dateValidation | join ('') | date('Y/m/d')}}" disabled>
        </div>
    </div>
    <div class="input-grp" style="flex-basis:25%">
        <div class="d-flex flex-column">
            <label for="typ" class="fr-label">Type de marché</label>
            <input type="text" id="typ" class="fr-input" value="{% if result_achat.typeMarche == 0 %}MABC{% else %}MPPA{% endif %}" disabled>
        </div>
        <div class="d-flex flex-column">
            <label for="pub" class="fr-label">Marché avec publicité ?</label>
            <input type="text" id="pub" class="fr-input" value="{% if result_achat.place == 0 %}Non{% else %}Oui{% endif %}" disabled>
        </div>
        <div class="d-flex flex-column">
            <label for="dev" class="fr-label">Devis</label>
            <input type="text" id="dev" class="fr-input" value="{% if result_achat.devis == 0 %}Prescripteur{% else %}GSBdD/PFAF{% endif %}" disabled>
        </div>
        <div class="d-flex flex-column">
            <label for="tva" class="fr-label">TVA</label>
            <input type="text" id="tva" class="fr-input" value="{{result_achat.tvaIdent}}" disabled>
        </div>
        
                </div>
                            <div class="input-grp" style="flex-basis:25%">
                <div class="d-flex flex-column">
                <label for="obj " class="fr-label">Objet de l'achat</label>
                <input type="text" class="fr-input" id="obj" value="{{result_achat.objetAchat}}" disabled>
                </div>
                <div class="d-flex flex-column">
                <label for="obs" class="fr-label">Observations</label>
                <input type="text" class="fr-input" id="obs" value="{{result_achat.observations}}" disabled>
                </div>
                <div class="d-flex flex-column">
                <label for="uti" class="fr-label">Utilisateur</label>
                <input type="text" class="fr-input" id="uti" value="{{result_achat.utilisateurs.trigram}}" disabled>
                </div>
                </div>
                <div class="sub-btn d-flex justify-content-between align-items-centers">


</form>
<button type="button" class="fr-btn" onclick="history.back();">Retour à la liste d'achats</button>
            </div>
            </div>

    </div>
</div>
{% endblock %}