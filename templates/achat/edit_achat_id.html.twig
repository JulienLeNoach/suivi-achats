{% extends 'base.html.twig' %}

{% block title %}Modifier un achat{% endblock %}

{% block body %}
<div class="achat-container">

    <div class='align-items-center d-flex mt-3 bandeau-form-search'>
        <span class="fr-icon-search-line" aria-hidden="true"></span>
        <h5 class=" mt-4 ms-3 blueF">Modifier un achat</h5>
        <div class="bande ms-3"></div>
    </div>

    <div class="form-container">
        {{ form_start(form, {'attr': {'class': 'search-form-all d-flex justify-content-around flex-wrap p-5'}}) }}

        <div class="input-grp" style="flex-basis:33%">
        <div class="d-flex">
        <div class="w-50 me-3">
            {{ form_row(form.code_service) }}
            </div>
            <div class="w-50">
            {{ form_row(form.numero_achat) }}
            </div>
            </div>
            <div class="d-flex">
                <div class="w-50 me-3">
                    {{ form_row(form.montant_achat) }}
                </div>
                <div class="w-50">
                    {{ form_row(form.date_valid_inter) }}

                </div>
            </div>
            <div class="d-flex">

                <div class="w-50">
                    {{ form_row(form.date_commande_chorus) }}
                </div>
            </div>
                        {{ form_row(form.objet_achat) }}
            {{ form_row(form.observations) }}
        </div>



        <div class="input-grp" style="flex-basis:33%">

            {{ form_row(form.code_formation) }}
            {{ form_row(form.num_siret) }}
            {{ form_row(form.code_cpv) }}
            {{ form_row(form.code_uo) }}
            {{ form_row(form.tva_ident) }}
        </div>

        <div class="input-grp" style="flex-basis:33%">
            {{ form_row(form.type_marche) }}

        </div>

        <div class="sub-btn d-flex justify-content-between align-items-centers">
        {{ form_row(form.Valider) }}
        </div>

        {{ form_end(form) }}
    </div>

    {% for flash_message in app.session.flashbag.get('error') %}
        <div class="alert alert-danger">
            {{ flash_message | nl2br }}
        </div>
    {% endfor %}
</div>
{% endblock %}