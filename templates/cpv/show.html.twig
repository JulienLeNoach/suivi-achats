{% extends 'base.html.twig' %}

{% block title %}CPV{% endblock %}

{% block body %}
<div class="achat-container">
    <div class='align-items-center justify-content-center d-flex mt-3 bandeau-form-search'>
        <h5 class="mt-4 ms-3 blueF">CPV N°{{c_p_v.codeCpv}}</h5>
        <div class="bande ms-3">
        </div>
    </div>
    <div class="action-container p-3">
    <table class="">
        <tbody>
            <tr>
                <th>Code CPV</th>
                <td>{{ c_p_v.codeCpv }}</td>
            </tr>
            <tr>
                <th>Libellé CPV</th>
                <td>{{ c_p_v.libelleCpv }}</td>
            </tr>
            <tr>
                <th>Montant du CPV</th>
                <td>{{ c_p_v.mtCpvAuto }}</td>
            </tr>
            <tr>
                <th>Etat du CPV</th>
<td>
    {% if c_p_v.etatCpv == 1 %}
        Actif
    {% elseif c_p_v.etatCpv == 0 %}
        Inactif
    {% else %}
        <!-- Gérer les autres cas si nécessaire -->
        {{ c_p_v.etatCpv }}
    {% endif %}
</td> 
            </tr>
        </tbody>
    </table>
    <div class="align-items-center justify-content-center d-flex mt-3">

    <a class="fr-btn me-3" href="{{ path('app_c_p_v_edit', {'id': c_p_v.id}) }}">Modifier</a>

    {{ include('cpv/_delete_form.html.twig') }}
    </div>
    <div class="align-items-center justify-content-center d-flex mt-3">
        <a class="fr-btn" href="{{ path('cpv') }}">Retour à la liste</a>
</div>
    </div>
    </div>

</div>
{% endblock %}
