<h6 class=" blueF " style="color:#000091;">Achats MPPA</h6>
                    <table border="1" id="volvalTable" >
                            <thead style="background-color:#000091;color:white;">
                            <th></th>
                            <th>PME</th>
                            <th>%PME</th>
                            </thead>
                        <tr>
                            <td>VALEUR</td>
                            <td>{{ result_achats[0]["ValeurPME"] }}</td>
                            <td>{{ result_achats[0]["ValeurPercentPME"] | round }}%</td>
                        </tr>
                        <tr>
                            <td>VOLUME</td>
